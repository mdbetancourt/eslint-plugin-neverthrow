{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "dist",
    "declaration": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests", "scripts"],
  "exclude": [".prettierrc.js"]
}
