{
  "name": "eslint-plugin-neverthrow",
  "version": "0.0.0-development",
  "description": "",
  "engines": {
    "node": ">=8.10.0"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "lint": "run-s lint:ts lint:eslint lint:prettier",
    "lint:ts": "tsc --noEmit",
    "lint:eslint": "eslint '**/*.ts'",
    "lint:prettier": "prettier '**/*.{ts,json,yaml,md}'",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "release": "semantic-release",
    "add-rule": "ts-node scripts/add-rule",
    "update": "ts-node scripts/update",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "eslint": ">=5.16.0"
  },
  "dependencies": {
    "@types/eslint-utils": "^3.0.0",
    "@typescript-eslint/experimental-utils": "^4.20.0",
    "eslint-utils": "3.0.0",
    "tsutils": "3.21.0"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.8",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "semantic-release": "^18.0.0",
    "lint-staged": "^10.5.4",
    "neverthrow": "4.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mdbetancourt/eslint-plugin-nevethrow"
  },
  "keywords": [
    "typescript",
    "template",
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mdbetancourt/eslint-plugin-nevethrow/issues"
  },
  "homepage": "https://github.com/mdbetancourt/eslint-plugin-nevethrow#readme"
}
